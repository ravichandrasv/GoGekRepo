<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/temp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_56"
            android:text=""
            android:textColor="@color/temp_color"
            android:textSize="@dimen/text_size_96" />

        <TextView
            android:id="@+id/place_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_88"
            android:text=""
            android:textColor="@color/place_color"
            android:textSize="@dimen/text_size_36" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fore_cast_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_text_view"
            android:scrollbars="vertical"
            />
    </RelativeLayout>


</RelativeLayout>
